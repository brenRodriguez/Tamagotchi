            <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreMascota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UltimaVezAlimentado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TiempoMaximoSinAlimentar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoDeMascota)
